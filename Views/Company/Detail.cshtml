﻿@model Model.EF.Company

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string Name = "";
    using (var dbContext = new JobsFinder_Main.Identity.AppDbContext())
    {
        var user = dbContext.Users.FirstOrDefault(u => u.UserName == User.Identity.Name);
        if (user != null)
        {
            Name = user.Name;
        }
    }
}

@using Microsoft.AspNet.Identity;

<div class="container-xxl pt-5">
    <div class="container">
        <div class="title d-flex">
            <h4 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Company details</h4>
        </div>
        <div class="detail-job">
            <div class="box-top d-flex justify-content-between">
                <div class="info-job">
                    <div class="d-flex align-items-center mb-3">
                        <img src="@Model.Avatar" alt="" style="width: 80px; height: 80px; border-radius: 8px; border: 1px solid #E7F0FA; margin-right: 24px;">
                        <div class="name-job">
                            <h3>@Model.Name</h3>
                            <div class="d-flex link">
                                <div class="content d-flex align-items-center">
                                    <i class="bi bi-globe"></i>
                                    <h6 style="margin: 0; margin-left: 8px;">@Model.LinkPage</h6>
                                </div>
                                <div class="content d-flex align-items-center" style="margin-left: 32px;">
                                    <i class="bi bi-people"></i>
                                    <h6 style="margin: 0; margin-left: 8px;">@Model.Employees Employees</h6>
                                </div>
                                <div class="content d-flex align-items-center" style="margin-left: 32px;">
                                    <i class="bi bi-star-fill" style="color: orange;"></i>
                                    <h6 style="margin: 0; margin-left: 8px;">@ViewBag.AverageRating (@ViewBag.TotalReviews review)</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center box-action">
                    <div class="d-flex mb-3">
                        <a class="btn btn-primary btn-apply" href="">Follow company</a>
                    </div>
                </div>
            </div>

            <div class="box-bottom d-flex mt-5 mb-5 justify-content-between">
                <div class="bottom-left" style="max-width: 63%;">
                    <div class="box-content p-4" style="margin-bottom: 24px; background: #f6faff; border-radius: 4px; ">
                        <h4>Description</h4>
                        <div class="content">
                            <p>@Html.Raw(Model.Description)</p>
                        </div>
                    </div>

                    <!-- Jobs Start -->
                    <div class="container-xxl py-5">
                        <h4 class="mb-4">The company is recruiting:</h4>
                        @{ Html.RenderAction("JobInCompany", "Company");}

                    </div>
                    <!-- Jobs End -->
                </div>
                <!-- Bottom-right section for location -->
                <div class="bottom-right" style="width: 35%;">
                    <div class="box-content p-4" style="background: #f6faff; border-radius: 4px; ">
                        <h4>Location</h4>
                        <div class="content">
                            <div class="d-flex">
                                <i class="bi bi-geo"></i>
                                <p style="margin-left: 12px;">@Model.Location</p>
                            </div>
                            <div style="width: 100%; height: auto;"></div>
                        </div>
                    </div>
                    <!-- Reviews section -->
                    <div class="box-content p-4 mt-4" style="background: #f6faff; border-radius: 4px;">
                        <h4>Reviews</h4>
                        <div class="content">
                            @using (Html.BeginForm("AddReview", "Company", new { id = Model.ID }, FormMethod.Post))
                            {
                                <input type="hidden" name="companyId" value="@Model.ID" />
                                <input type="hidden" name="userId" value="@User.Identity.GetUserId()" />
                                <input type="hidden" name="Name" value="@Name" />
                                <div class="form-group">
                                    <label for="comment">Comment:</label>
                                    <textarea class="form-control" id="comment" name="comment" rows="3" style="padding:8px;"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="rating">Rating:</label>
                                    <select class="form-control" id="rating" name="rating" style="padding:8px;">
                                        <option value="1">1 star</option>
                                        <option value="2">2 stars</option>
                                        <option value="3">3 stars</option>
                                        <option value="4">4 stars</option>
                                        <option value="5">5 stars</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit Review</button>
                            }
                            <!-- List of reviews -->
                            <h5 class="mt-4">Recent Reviews (@ViewBag.TotalReviews)</h5>
                            @foreach (var review in Model.Reviews)
                            {
                                <div class="card mt-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <h6>@review.Name</h6>
                                            <small>@review.CreatedAt</small>
                                        </div>
                                        <p>@review.Comment</p>
                                        <div class="d-flex align-items-center">
                                            @for (int i = 0; i < review.Rating; i++)
                                            {
                                                <i class="bi bi-star-fill" style="color: orange;"></i>
                                            }
                                            @for (int i = review.Rating; i < 5; i++)
                                            {
                                                <i class="bi bi-star" style="color: orange;"></i>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>