                        var categories = new Model.DAO.BlogCategoryDao().ListAll().ToList();
                    }
                    @foreach (var category in categories)
                    {
                        <li class="list-inline-item">
                            @using (Html.BeginForm("Index", "Blog", FormMethod.Get))
                            {
                                <button type="submit" class="btn btn-link" value="@category.ID" name="fillterCategory">@category.Name</button>
