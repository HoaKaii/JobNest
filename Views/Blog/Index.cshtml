<section class="section-sm">
    <div class="container">
        <div class="row justify-content-center">
            <aside class="col-lg-4 sidebar">
                <!-- Search -->
                <div class="widget">
                    <h4 class="widget-title"><span>Search</span></h4>
                    @using (Html.BeginForm("Index", "Blog", FormMethod.Get, new { @class = "form-search" }))
                    {
                        <div class="box-input" style="border: none;">
                            <i class="bi bi-search m-0"></i>
                            <input type="text" placeholder="Keyword ..." aria-label="Search" aria-describedby="basic-addon2" name="searchName" value="@ViewBag.SearchName">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Search</button>
                    }
                </div>
                <!-- authors -->
                <div class="widget widget-author">
                    <h4 class="widget-title">Authors</h4>
                    <div class="media align-items-center">
                        <div class="mr-3">
                            <img class="widget-author-image" src="/Data/images/admin.jpg">
                        </div>
                        <div class="media-body">
                            <h5 class="mb-1"><a class="post-title" href="#">Admin System</a></h5>
                            <span>Blogs's Author</span>
                        </div>
                    </div>
                </div>
                <!-- Search -->

                <div class="widget">
                    <h4 class="widget-title"><span>Never Miss A News</span></h4>
