
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Carousel Start -->
<div class="container-fluid p-0">
    @{ Html.RenderAction("Carousel", "Home"); }
</div>
<!-- Carousel End -->
<!-- Category Start -->
<div class="container-xxl py-1">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                <a class="cat-item rounded p-3" href="">
                    <i class="bi bi-briefcase"></i>
                    <div class="cat-right">
                        <h6 class="mb-1">@ViewBag.JobCount</h6>
                        <p class="mb-0">Jobs</p>
                    </div>
                </a>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.3s">
                <a class="cat-item rounded p-3" href="">
                    <i class="bi bi-building"></i>
                    <div class="cat-right">
                        <h6 class="mb-1">@ViewBag.CompanyCount</h6>
                        <p class="mb-0">Company</p>
                    </div>
                </a>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.5s">
                <a class="cat-item rounded p-3" href="">
                    <i class="bi bi-people"></i>
                    <div class="cat-right">
                        <h6 class="mb-1">@ViewBag.UserCount</h6>
                        <p class="mb-0">User</p>
                    </div>
                </a>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.7s">
                <a class="cat-item rounded p-3" href="">
                    <i class="bi bi-card-checklist"></i>
                    <div class="cat-right">
                        <h6 class="mb-1">@ViewBag.JobCountNew</h6>
                        <p class="mb-0">New Job</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- Category End -->
<div class="container-xxl py-5 box-categoryJob">
    <div class="container">
        <div class="title d-flex">
            <h4 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Popular professions</h4>
            <a href="#" class="buttonView" style="font-size: 14px; height: max-content; border: none; background: none; color: #25316D;">
                View all
                <i class="bi bi-arrow-right-short"></i>
            </a>
        </div>

        <div class="tab-content" data-wow-delay="0.3s">
            @{ Html.RenderAction("ListCareer", "Career"); }
        </div>
    </div>
</div>
<!-- Jobs Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="title d-flex">
            <h4 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">New jobs</h4>
            <a href="/cong-viec" class="button" style="font-size: 14px; height: max-content; border: none; background: none; color: #25316D;">
                View all
                <i class="bi bi-arrow-right-short"></i>
            </a>
        </div>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    @Html.Partial("JobNewList")
                    <a class="btn btn-primary py-3 px-5 btn-viewAll" href="/cong-viec">See more jobs</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-xxl py-5">
    <div class="container">
        <div class="title d-flex">
            <h4 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Featured jobs</h4>
            <a href="/cong-viec" class="button" style="font-size: 14px; height: max-content; border: none; background: none; color: #25316D;">
                View all
                <i class="bi bi-arrow-right-short"></i>
            </a>
        </div>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    @Html.Partial("JobFeaturedList")
                    <a class="btn btn-primary py-3 px-5 btn-viewAll" href="/cong-viec">See more jobs</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Jobs End -->
<!-- Category Start -->
<div class="container-xxl py-1 jobsCategory py-5" style="background: #E7F0FA;">
    <div class="container">
        <div class="title d-flex">
            <h4 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Categories</h4>
            <a href="#" class="button" style="font-size: 14px; height: max-content; border: none; background: none; color: #25316D;">
                View all
                <i class="bi bi-arrow-right-short"></i>
            </a>
        </div>
        @{ Html.RenderAction("ListJobCategry", "JobCategory"); }
    </div>
</div>
<!-- Category End -->
<!-- About Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="row g-0 about-bg rounded overflow-hidden">
                    <div class="col-6 text-start">
                        <img class="img-fluid w-100" src="~/Assets/Client/JobsFinder/img/imgJobsDetail1.jpeg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid" src="~/Assets/Client/JobsFinder/img/banner2.jpeg" style="width: 85%; margin-top: 15%;">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid" src="~/Assets/Client/JobsFinder/img/banner3.jpeg" style="width: 85%;">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid w-100" src="~/Assets/Client/JobsFinder/img/banner4.jpeg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <h1 class="mb-4">Support for finding the best job opportunities and potential candidates</h1>
                <p class="mb-4">Find your dream job easily - browse thousands of job listings and apply today on our job search platform</p>
                <p><i class="fa fa-check text-primary me-3"></i>Thousands of different jobs</p>
                <p><i class="fa fa-check text-primary me-3"></i>Easily connect with businesses</p>
                <p><i class="fa fa-check text-primary me-3"></i>Completely free of charge</p>
                <a class="btn btn-primary py-3 px-5 mt-3 btn-viewAll" href="">View more articles</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Testimonial Start -->
<div class="container-xxl py-5 wow fadeInUp listCategory" data-wow-delay="0.1s" style="background: #E7F0FA;">
    @{ Html.RenderAction("Testimonial", "Company"); }
</div>
<!-- Testimonial End -->
@{ Html.RenderAction("BlogHome", "Blog"); }
