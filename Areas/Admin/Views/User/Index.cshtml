@model PagedList.IPagedList<JobsFinder_Main.Identity.AppUser>
@using PagedList.Mvc;
@using JobsFinder_Main.Identity;

@{
    ViewBag.Title = "Manage user";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.EntityFramework;

@section header{
    <h1>List of users</h1>
}

@section jsFooter{
    <script src="~/Assets/Admin/js/controller/userController.js"></script>
}

<!-- Topbar Search -->
@using (Html.BeginForm("Index", "User", FormMethod.Get, new { @class = "navbar-search" }))
{
    <div class="input-group">
        <input type="text" class="form-control bg-white search-input" placeholder="Search..."
               aria-label="Search" aria-describedby="basic-addon2" name="searchString" value="@ViewBag.SearchString">
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-search fa-sm"></i>
            </button>
        </div>
        <a class="btn btn-primary ml-3" href="/Admin/User/Create">
            Add new user
        </a>
    </div>
    <style>
        .navbar-search {
            max-width: 40%;
            margin-bottom: 1rem;
        }

            .navbar-search > input {
                border: 1px solid #d1d3e2;
            }
    </style>
}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Status</th>
                        <th>Role</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Status</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.Id">
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td><a href="#" class="btn-active" data-id="@item.Id">@(item.Status == true ? "Active" : "Inactive")</a></td>
                            <td>
                                @{
                                    var userManager = new UserManager<AppUser>(new UserStore<AppUser>(new AppDbContext()));
                                    var roles = userManager.GetRoles(item.Id);
                                    if (roles.Any())
                                    {
                                        <text>@roles.First()</text>
                                    }
                                    else
                                    {
                                        <text>No Role Assigned</text>
                                    }
                                }
                            </td>
                            <td>
                                <a class="edit-link" href="/Admin/User/Edit/@item.Id">Edit</a>
                                @Ajax.ActionLink("Delete", "Delete", new { id = item.Id }, new AjaxOptions
                                {
                                    Confirm = "Do you want to delete this record?",
                                    HttpMethod = "Delete",
                                    OnSuccess = "deleteSuccess"
                                }, new { @class = "delete-link" })
                                <style>
                                    .delete-link {
                                        color: red;
                                    }

                                    .edit-link {
                                        color: green;
                                    }
                                </style>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewBag.SearchString }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
        </div>
    </div>
</div>
