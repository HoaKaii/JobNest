@model PagedList.IPagedList<Model.EF.Job>
@using PagedList.Mvc;

@{
    ViewBag.Title = "List of jobs";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    List of jobs
}

@section jsFooter{
    <script src="~/Assets/Admin/js/controller/jobController.js"></script>
}

<!-- Topbar Search -->
@using (Html.BeginForm("Index", "Job", FormMethod.Get, new { @class = "navbar-search" }))
{
    <div class="input-group">
        <input type="text" class="form-control bg-white search-input" placeholder="Search..."
               aria-label="Search" aria-describedby="basic-addon2" name="searchName" value="@ViewBag.SearchName">
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-search fa-sm"></i>
            </button>
        </div>
        <a class="btn btn-primary ml-3" href="/Admin/Job/Create">
            Add new job
        </a>
    </div>
    <style>
        .navbar-search {
            max-width: 40%;
            margin-bottom: 1rem;
        }

            .navbar-search > input {
                border: 1px solid #d1d3e2;
            }
    </style>
}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Job Title</th>
                        <th>Deadline</th>
                        <th>Posted Date</th>
                        <th>Updated Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Job Title</th>
                        <th>Deadline</th>
                        <th>Posted Date</th>
                        <th>Updated Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@item.Deadline</td>
                            <td>@item.CreatedDate</td>
                            <td>@item.ModifiedDate</td>
                            <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status == true ? "Active" : "Unactive")</a></td>
                            <td>
                                <a class="edit-link" href="/Admin/Job/Edit/@item.ID">Edit</a>
                                @Ajax.ActionLink("Delete", "Delete", new { @id = item.ID }, new AjaxOptions
                           {
                               Confirm = "Do you want to delete this record?",
                               OnComplete = "$(row_" + @item.ID + ").remove()",
                               HttpMethod = "Delete"
                           }, new { @class = "delete-link" })
                                <style>
                                    .delete-link {
                                        color: red;
                                    }

                                    .edit-link {
                                        color: green;
                                    }
                                </style>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchName = @ViewBag.SearchName }))
        </div>
    </div>
</div>

